    "target": "es2017",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "incremental": true
